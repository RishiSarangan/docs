{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "Slidely AI",
  "description": "Complete documentation for Slidely AI - Create amazing presentations with AI-powered slides",
  "colors": {
    "primary": "#E3511F",
    "light": "#E9744C",
    "dark": "#B64119"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "/",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://slidely.ai/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@slidely.ai"
      },
      {
        "label": "Pricing",
        "href": "https://slidely.ai/pricing"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://slidely.ai/signup"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/slidely",
      "github": "https://github.com/slidely",
      "linkedin": "https://linkedin.com/company/slidely"
    },
    "links": [
      {
        "header": "Product",
        "items": [
          {
            "label": "Features",
            "href": "https://slidely.ai/features"
          },
          {
            "label": "Pricing",
            "href": "https://slidely.ai/pricing"
          }
        ]
      },
      {
        "header": "Company",
        "items": [
          {
            "label": "About",
            "href": "https://slidely.ai/about"
          },
          {
            "label": "Blog",
            "href": "https://slidely.ai/blog"
          }
        ]
      }
    ]
  },
  "seo": {
    "title": "Slidely AI Documentation",
    "description": "Complete guide to using Slidely AI - Create amazing presentations with AI-powered slides",
    "indexing": "navigable",
    "search": {
      "prompt": "Search documentation..."
    }
  },
  "errors": {
    "404": {
      "redirect": false,
      "title": "Page not found",
      "description": "The page you're looking for doesn't exist. [Go home](/)."
    }
